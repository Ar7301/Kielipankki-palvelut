#!/bin/bash

set -e
declare -a REPOS

REPOS=(
	"workdir https://github.com/wikimedia/mediawiki.git origin/REL1_31" #
	"workdir/extensions/Babel https://github.com/wikimedia/mediawiki-extensions-Babel.git 2019.04"
	"workdir/extensions/CategoryTree https://github.com/wikimedia/mediawiki-extensions-CategoryTree.git origin/REL1_31"
	"workdir/extensions/CirrusSearch https://github.com/wikimedia/mediawiki-extensions-CirrusSearch.git origin/REL1_31"
	"workdir/extensions/Cite https://github.com/wikimedia/mediawiki-extensions-Cite.git origin/REL1_31"
	"workdir/extensions/CodeEditor https://github.com/wikimedia/mediawiki-extensions-CodeEditor.git origin/REL1_31"
	"workdir/extensions/ConfirmEdit https://github.com/wikimedia/mediawiki-extensions-ConfirmEdit.git origin/REL1_31"
	"workdir/extensions/DeleteBatch https://github.com/wikimedia/mediawiki-extensions-DeleteBatch.git origin/REL1_31"
	"workdir/extensions/Elastica https://github.com/wikimedia/mediawiki-extensions-Elastica.git origin/REL1_31"
	"workdir/extensions/FileSystemImageServer https://github.com/Nikerabbit/mediawiki-extensions-FileSystemImageServer.git origin/master"
	"workdir/extensions/FinnFrameNet https://github.com/Nikerabbit/mediawiki-extensions-FinnFrameNet.git origin/master"
	"workdir/extensions/Flow https://github.com/wikimedia/mediawiki-extensions-Flow.git origin/REL1_31"
	"workdir/extensions/HeaderTabs https://github.com/wikimedia/mediawiki-extensions-HeaderTabs.git origin/REL1_31"
	"workdir/extensions/InputBox https://github.com/wikimedia/mediawiki-extensions-InputBox.git origin/REL1_31"
	"workdir/extensions/Kotus https://github.com/Nikerabbit/mediawiki-extensions-Kotus.git origin/master"
	"workdir/extensions/LiquidThreads https://github.com/wikimedia/mediawiki-extensions-LiquidThreads.git origin/REL1_31"
	"workdir/extensions/Lud https://github.com/Nikerabbit/mediawiki-extensions-Lud.git origin/master"
	"workdir/extensions/Maps https://github.com/JeroenDeDauw/Maps.git 5.2.0"
	"workdir/extensions/MixedNamespaceSearchSuggestions https://github.com/wikimedia/mediawiki-extensions-MixedNamespaceSearchSuggestions.git origin/REL1_31"
	"workdir/extensions/Nimiarkisto https://github.com/Nikerabbit/mediawiki-extensions-Nimiarkisto.git origin/master"
	"workdir/extensions/Nuke https://github.com/wikimedia/mediawiki-extensions-Nuke.git origin/REL1_31"
	"workdir/extensions/PageForms https://github.com/wikimedia/mediawiki-extensions-PageForms.git 4.6"
	"workdir/extensions/ParserFunctions https://github.com/wikimedia/mediawiki-extensions-ParserFunctions.git origin/REL1_31"
	"workdir/extensions/Renameuser https://github.com/wikimedia/mediawiki-extensions-Renameuser.git origin/REL1_31"
	"workdir/extensions/ReplaceText https://github.com/wikimedia/mediawiki-extensions-ReplaceText.git origin/REL1_31"
	"workdir/extensions/Sanat https://github.com/Nikerabbit/mediawiki-extensions-Sanat.git origin/master"
	"workdir/extensions/Scribunto https://github.com/wikimedia/mediawiki-extensions-Scribunto.git origin/REL1_31"
	"workdir/extensions/SemanticDrilldown https://github.com/wikimedia/mediawiki-extensions-SemanticDrilldown.git origin/REL1_31"
	"workdir/extensions/SemanticMediaWiki https://github.com/Nikerabbit/SemanticMediaWiki.git origin/csc"
	"workdir/extensions/ShortUrl https://github.com/wikimedia/mediawiki-extensions-ShortUrl.git origin/REL1_31"
	"workdir/extensions/SimpleMathJax https://github.com/jmnote/SimpleMathJax.git 65f9814" # 1.31-pre
	"workdir/extensions/SmiteSpam https://github.com/wikimedia/mediawiki-extensions-SmiteSpam origin/master"
	"workdir/extensions/Termbank https://github.com/Nikerabbit/mediawiki-extensions-Termbank.git origin/master"
	"workdir/extensions/Translate https://github.com/wikimedia/mediawiki-extensions-Translate.git 2019.04"
	"workdir/extensions/UniversalLanguageSelector https://github.com/wikimedia/mediawiki-extensions-UniversalLanguageSelector.git 2019.04"
	"workdir/extensions/UserMerge https://github.com/wikimedia/mediawiki-extensions-UserMerge.git origin/REL1_31"
	"workdir/extensions/WikiEditor https://github.com/wikimedia/mediawiki-extensions-WikiEditor.git origin/REL1_31"
	"workdir/extensions/Wikibase https://github.com/wikimedia/mediawiki-extensions-Wikibase.git origin/REL1_31"
	"workdir/extensions/WordNet https://github.com/Nikerabbit/mediawiki-extensions-WordNet.git origin/master"
	"workdir/skins/Timeless https://github.com/wikimedia/mediawiki-skins-Timeless.git origin/REL1_31"
	"workdir/skins/Vector https://github.com/wikimedia/mediawiki-skins-Vector.git origin/REL1_31"
)

for LINE in "${REPOS[@]}"
do
	LINE=($LINE)
	DIR="${LINE[0]}"
	URL="${LINE[1]}"
	VER="${LINE[2]}"

	echo "$DIR"
	if [ -d "$DIR" ]
	then (
		cd "$DIR" || exit
		ACTUALURL="$(git config --get remote.origin.url)"
		if [ "$URL" != "$ACTUALURL" ]
		then
			echo "Re-cloning repository $DIR";
			cd -
			rm -rf "$DIR"
		fi
	) fi

	if [ ! -d "$DIR" ]
	then
		git clone "$URL" "$DIR" || exit
	fi

	(
		cd "$DIR" || exit
		git fetch -q &&
		git fetch -q --tags &&
		git reset -q --hard "$VER" &&
		git clean -q -f -d -e /extensions -e /skins -e "LocalSettings*" 2>&1 >&-
		if [ "$DIR" != 'workdir' ]
		then
			git submodule update --init
		fi
	)
done
