[Unit]
Description=MediaWiki jobrunner for {{ instance.key }}
After=network.target
Requires=mariadb.service

[Service]
User=apache
ExecStart=/usr/bin/php /srv/mediawiki/targets/production/maintenance/runJobs.php --wait --maxjobs=10000 --wiki={{ instance.key }}
Restart=always
RestartSec=5
PrivateDevices=true
PrivateTmp=true
ProtectControlGroups=true
ProtectHome=true
ProtectKernelTunables=true
ProtectSystem=full
Nice=15

[Install]
WantedBy=multi-user.target
